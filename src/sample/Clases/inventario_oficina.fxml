            <TableColumn fx:id="columna_estado" minWidth="0.0" prefWidth="145.0" text="Estado del articulo" />
        </columns>
      </TableView>
      <Button fx:id="btn_buscar" layoutX="592.0" layoutY="84.0" mnemonicParsing="false" onAction="#buscar" styleClass="btn-marino">
         <graphic>
            <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../img/iconos/lupa.png" />
               </image>
            </ImageView>
         </graphic></Button>
      <Button fx:id="btn_nuevo_articulo" layoutX="668.0" layoutY="154.0" mnemonicParsing="false" onAction="#abrir_form" prefHeight="17.0" prefWidth="150.0" styleClass="btn-marino" text="Nuevo articulo" />
